<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:background="@drawable/searched_member_background"
        android:elevation="5dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="bosmania" />

        <TextView
            android:id="@+id/tvAcceptFriendRequest"
            android:layout_width="70dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Accept"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:background="@drawable/request_buttons_background"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDenyFriendRequest"
            android:layout_width="70dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvAcceptFriendRequest"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Deny"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:background="@drawable/cancel_friend_request_background"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>